<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="false" xmlns:view="com.mangofactory.pepper.view.*">
	
	<fx:Script>
		<![CDATA[
			import com.mangofactory.pepper.model.Badge;
			import com.mangofactory.pepper.model.PostTag;
			[Bindable("dataChange")]
			public function get badge():Badge
			{
				return data as Badge;
			}
		]]>
	</fx:Script>
	<s:Rect top="0" left="0" right="0" bottom="0">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#656565" />
				<s:GradientEntry color="#373737" />
			</s:LinearGradient>
		</s:fill>
		<s:filters>
			<s:BevelFilter angle="45" strength=".75" distance=".75" highlightAlpha="0.75"  blurX="2" blurY="2"/>
		</s:filters>
	</s:Rect>
	<s:Label top="5" bottom="5" left="5" right="5" styleName="tag" text="{badge.name}" />
</s:ItemRenderer>
